@using OnlineShop.Web.ViewModels.Administrator.Home
@model IndexAdminViewModel
@{
    ViewData["Title"] = "Index";
}

<section class="py-5">
    <div class="container px-1">
        <div class="row">
            <div class="col-xl-6">
                <div class="container mobile-fondsize-11 shadow p-4 mb-4 bg-white">
                    <div class="mobile-fondsize-20 h3 text-center text-muted font-italic">Необработени поръчки</div>
                    <table class="table table-hover">
                        <thead>
                            <tr class="row">
                                <th scope="col" class="col-md-2 col d-flex justify-content-center">Номер</th>
                                <th scope="col" class="col-md-2 col d-flex justify-content-center">Получена</th>
                                <th scope="col" class="col-md-2 col d-flex justify-content-center">Тип</th>
                                <th scope="col" class="col-md-2 col d-flex justify-content-center">Статус</th>
                                <th scope="col" class="col-md-4 col d-flex justify-content-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.UnprocessedOrders)
                            {
                                <tr class="row">
                                    <th scope="col" class="col-md-2 col d-flex justify-content-center">@product.Id</th>
                                    <th scope="col" class="col-md-2 col d-flex justify-content-center">@product.OrderDate</th>
                                    <th scope="col" class="col-md-2 col d-flex justify-content-center">@product.PaymentType</th>
                                    <th scope="col" class="col-md-2 col d-flex justify-content-center">@product.PaymentStatus</th>
                                    <th scope="col" class="col-md-4 col d-flex justify-content-center"></th>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.UnprocessedOrders.Count == 0)
                    {
                        <div class="mobile-fondsize-11 h6 text-center font-italic">Нямате необработени поръчки!</div>
                    }
                </div>
            </div>
            <div class="col-xl-6">
                <div class="container mobile-fondsize-11 shadow p-4 mb-4 bg-white">
                    <div class="mobile-fondsize-20 h3 text-center text-muted font-italic">Обработени поръчки</div>
                    <table class="table table-hover">
                        <thead>
                            <tr class="row">
                                <th scope="col" class="col-2 d-flex justify-content-center">Номер</th>
                                <th scope="col" class="col-2 d-flex justify-content-center">Изпратена</th>
                                <th scope="col" class="col-2 d-flex justify-content-center">Тип</th>
                                <th scope="col" class="col-2 d-flex justify-content-center">Статус</th>
                                <th scope="col" class="col-4 d-flex justify-content-center"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.ProcessedOrders)
                            {
                                <tr class="row">
                                    <th scope="col" class="col-2 d-flex justify-content-center">@product.Id</th>
                                    <th scope="col" class="col-2 d-flex justify-content-center">@product.DispatchDate</th>
                                    <th scope="col" class="col-2 d-flex justify-content-center">@product.PaymentType</th>
                                    <th scope="col" class="col-2 d-flex justify-content-center">@product.PaymentStatus</th>
                                    <th scope="col" class="col-4 d-flex justify-content-center"></th>
                                </tr>
                            }
                        </tbody>
                    </table>
                    @if (Model.ProcessedOrders.Count == 0)
                    {
                        <div class="mobile-fondsize-11 h6 text-center font-italic">Нямате обработени поръчки!</div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>