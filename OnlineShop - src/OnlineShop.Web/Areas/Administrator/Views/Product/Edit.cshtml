@model EditProductViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="py-5">
    <div class="container px-1">
        <h3 class="text-center">Създаване на продукт</h3>
        <form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="Edit">
            <div class="mb-3 row">
                <div class="col-md-5">
                    <label class="control-label" asp-for="Name"></label>
                    <input class="form-control" asp-for="Name">
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
                <div class="col-md-6">
                    <label class="control-label" asp-for="Description"></label>
                    <input class="form-control" asp-for="Description">
                    <span class="text-danger" asp-validation-for="Description"></span>
                </div>
            </div>
            <div class="mb-3">
                <p class="text-danger fw-bold">!!Внимание: Разделяй с ';'! Пример: Процесор:i5 7500;RAM:16GB; </p>
                <label class="control-label" asp-for="Specification"></label>
                <input class="form-control" asp-for="Specification">
                <span class="text-danger" asp-validation-for="Specification"></span>
            </div>
            <div class="mb-3 row">
                <div class=" col-md-6">
                    <label class="control-label" asp-for="Price"></label>
                    <input class="form-control" asp-for="Price">
                    <span class="text-danger" asp-validation-for="Price"></span>
                </div>
                <div class=" col-md-6">
                    <label class="control-label" asp-for="ParnersPrice"></label>
                    <input class="form-control" asp-for="ParnersPrice">
                    <span class="text-danger" asp-validation-for="ParnersPrice"></span>
                </div>
            </div>
            <div class="mb-3 row">
                <div class=" col-md-6">
                    <label asp-for="SubCategoryId" class="control-label"></label>
                    <select asp-for="SubCategoryId" class="form-control">
                        @foreach (var category in Model.SubCategories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="mb-3 col-md-6">
                    <label asp-for="FormImages" class="control-label"></label>
                    <div class="d-flex">
                        <input id="form-image" class="form-control" asp-for="FormImages" multiple>
                        <span asp-validation-for="FormImages" class="text-danger">.jpg,.png</span>
                    </div>
                    <h4 id="error-image" class="text-danger text-center fw-bold" style="display: none;">Invalid format</h4>
                </div>
                <div class="d-flex container-images">
                </div>
            </div>
            <div class="form-group text-center">
                <button type="submit" value="" class="btn btn-primary">Създай продукт</button>
            </div>
        </form>
    </div>
</section>

<script src="~/js/readImageForm.js"></script>

@section Scripts {
    @{await Html.RenderPartialAsync("~/Views/Shared/Partials/_ValidationScriptsPartial.cshtml");}
}

